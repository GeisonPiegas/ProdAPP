<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alunos.prodapp.TelaDeGerenciamentoDeSilo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                app:srcCompat="@android:drawable/btn_dialog" />

            <TextView
                android:id="@+id/OpcoesTextViewTelaDeGerenciamentoDeSilos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/OpcoesTextViewTelaDeGerenciamentoDeSilos" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/RetirarProdutoImageButtonTelaDeGerenciamentoDeSilos"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@android:drawable/checkbox_off_background" />

                    <ImageButton
                        android:id="@+id/AdicionarProdutoImageButtonTelaDeGerenciamentoDeSilos"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@android:drawable/checkbox_on_background" />
                </LinearLayout>
            </HorizontalScrollView>

            <ScrollView
                android:id="@+id/AdicionarScrollViewTelaDeGerenciamentoDeSilos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/AdicionarInicioToolbarTelaDeGerenciamentoDeSilos"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="10dp"
                        android:background="?attr/colorPrimary"
                        android:minHeight="?attr/actionBarSize"
                        android:theme="?attr/actionBarTheme" />

                    <TextView
                        android:id="@+id/TituloAdicaoDeProdutoTextViewTelaDeGerenciamentoDeSilos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/TituloAdicaoDeProdutoTextViewTelaDeGerenciamentoDeSilos" />

                    <TextView
                        android:id="@+id/TipoDeProdutoTextViewTelaDeGerenciamentoDeSilos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/TipoDeProdutoTextViewTelaDeGerenciamentoDeSilos" />

                    <Spinner
                        android:id="@+id/TipoDeProdutoSpinnerTelaDeGerenciamentoDeSilos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/QuantidadeDoProdutoTextViewTelaDeGerenciamentoDeSilos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/QuantidadeDoProdutoTextViewTelaDeGerenciamentoDeSilos" />

                    <EditText
                        android:id="@+id/QuantidadeDoProdutoEditTextTelaDeGerenciamentoDeSilos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/AdicionarButtonTelaDeGerenciamentoDeSilos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/AdicionarButtonTelaDeGerenciamentoDeSilos" />

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/AdicionarFimToolbarTelaDeGerenciamentoDeSilos"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="10dp"
                        android:background="?attr/colorPrimary"
                        android:minHeight="?attr/actionBarSize"
                        android:theme="?attr/actionBarTheme" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
