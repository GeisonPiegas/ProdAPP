<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alunos.prodapp.SiloPrincipal">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="4dp"
        app:srcCompat="@drawable/silo" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:background="#11772d"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar2"
        android:layout_alignStart="@+id/toolbar2"
        android:background="#99bf12"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar1"
        android:layout_alignStart="@+id/toolbar1"
        android:background="@android:color/holo_green_dark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar3"
        android:layout_alignStart="@+id/toolbar3"
        android:background="@android:color/holo_green_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar4"
        android:layout_alignStart="@+id/toolbar4"
        android:background="#dddd05"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar5"
        android:layout_alignStart="@+id/toolbar5"
        android:background="#f6b53d"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar7"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar6"
        android:layout_alignStart="@+id/toolbar6"
        android:background="@android:color/holo_orange_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar7"
        android:layout_alignStart="@+id/toolbar7"
        android:background="@android:color/holo_orange_dark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar9"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar8"
        android:layout_alignStart="@+id/toolbar8"
        android:background="#e86201"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar10"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_above="@+id/toolbar9"
        android:layout_alignStart="@+id/toolbar9"
        android:background="@android:color/holo_red_dark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toolbar10"
        android:layout_centerHorizontal="true"
        android:text="100%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/toolbar10"
        android:text="90%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/toolbar9"
        android:text="80%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/toolbar8"
        android:text="70%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/toolbar7"
        android:text="60%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/toolbar6"
        android:text="50%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/toolbar5"
        android:text="40%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/toolbar4"
        android:text="30%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/toolbar3"
        android:text="20%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:layout_centerHorizontal="true"
        android:text="10%"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewNomeSilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Nome do Silo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewDetalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/maissilo"
        android:layout_below="@+id/toolbar10"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/LinearLayoutAdicionar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Adicionar"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <EditText
            android:id="@+id/pegaValorInformado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Informe o valor que deseja"
            android:inputType="number"
            android:textAlignment="center" />

        <Button
            android:id="@+id/botaoAdicionar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pegaValorInformado"
            android:layout_alignBottom="@+id/pegaValorInformado"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/textViewNomeSilo"
            android:text="Adicionar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutRemover1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/LinearLayoutAdicionar1"
        android:layout_toStartOf="@+id/imageViewDetalhes"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Remover"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <EditText
            android:id="@+id/tiraValorInformado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Informe o valor que deseja"
            android:inputType="number"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonRemover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/botaoAdicionar"
            android:layout_below="@+id/toolbar2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="rEMOVER" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/maissilo"
        android:layout_below="@+id/toolbar7"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageViewRemover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/maissilo"
        android:layout_below="@+id/toolbar4"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
