<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alunos.prodapp.TelaDeLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="247dp"
                app:srcCompat="@android:drawable/btn_dialog" />

            <TextView
                android:id="@+id/EmailTextViewTelaDeLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EmailTextViewTelaDeLogin" />

            <EditText
                android:id="@+id/EmailEditTextTelaDeLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="exemplo@exemplo.com"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/SenhaTextViewTelaDeLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SenhaTextViewTelaDeLogin" />

            <EditText
                android:id="@+id/SenhaEditTextTelaDeLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="********"
                android:inputType="textPassword" />

            <CheckBox
                android:id="@+id/SalvarSenhaCheckBoxTelaDeLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SalvarSenhaCheckBoxTelaDeLogin" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
