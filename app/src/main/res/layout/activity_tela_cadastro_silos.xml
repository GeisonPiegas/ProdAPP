<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutTelaDeCadastroSilos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alunos.prodapp.TelaCadastroSilos">

    <ScrollView
        android:id="@+id/ScrollViewTelaDeCadastroSilos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/LinearLayoutVerticalTelaDeCadastroSilos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/IconeImageViewTelaDeCadastroSilo"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                app:srcCompat="@mipmap/prod" />

            <TextView
                android:id="@+id/IdentificacaoTextViewTelaDeCadastroSilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/IdentificacaoTextViewTelaDeCadastroSilo" />

            <EditText
                android:id="@+id/IdentificacaoEditTextTelaDeCadastroSilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome ou NÂ° do Silo"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/EstocagemTextViewTelaDeCadastroSilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EstocagemTextViewTelaDeCadastroSilo" />

            <Spinner
                android:id="@+id/EstocagemSpinnerTelaDeCadastroSilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/CapacidadeTextViewTelaDeCadastroSilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/CapacidadeTextViewTelaDeCadastroSilo" />

            <EditText
                android:id="@+id/CapacidadeEditTextTelaDeCadastroSilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="7.8 Toneladas"
                android:inputType="textPersonName|number"
                android:text="@string/CapacidadeEditTextTelaDeCadastroSilo" />

            <Button
                android:id="@+id/CadastrarButtonTelaDeCadastroSilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/CadastrarButtonTelaDeCadastroSilo" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>