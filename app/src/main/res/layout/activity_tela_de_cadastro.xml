<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutTelaDeCadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alunos.prodapp.TelaDeCadastro">

    <ScrollView
        android:id="@+id/ScrollViewTelaDeCadastro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/LinearLayoutVerticalTelaDeCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/IconeImageViewTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/NomeTextViewTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="Nome"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#966100"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/NomeEditTextTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="John Constantine"
                android:inputType="textPersonName"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/EmailTextViewTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="E-mail"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#966100"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EmailEditTextTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="constantine@prodapp.bait"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/SenhaTextViewTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="Senha"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#966100"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/SenhaEditTextTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="********"
                android:inputType="textPassword"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/CadastrarButtonTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="Cadastrar"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/LoginTextViewTelaDeCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/LoginTextViewTelaDeCadastro"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#966100" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
